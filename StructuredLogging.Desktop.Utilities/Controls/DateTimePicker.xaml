<UserControl x:Class="StructuredLogging.Desktop.Utilities.Controls.DateTimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">
        
        <DatePicker x:Name="ShowStartDateTimePicker"
                    controls:TextBoxHelper.Watermark="From"
                    SelectedDate="{Binding Path=SelectedStartDate, Mode=TwoWay}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="120"
                    Margin="0,0,15,0" />

        <DatePicker x:Name="ShowEndDateTimePicker"
                    controls:TextBoxHelper.Watermark="To"
                    SelectedDate="{Binding Path=SelectedEndDate, Mode=TwoWay}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="120"
                    Margin="0,0,15,0" />
    </StackPanel>
</UserControl>
